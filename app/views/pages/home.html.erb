<div>
<%= render 'shared/navbar' %>
</div>
<div class ="logo-area d-flex flex-column">
  <%= image_tag "Logo-pour-effet-sautillement.png", class: "img-logo animate__animated animate__bounce animate__infinite animate__slower"%>
  <div class="login">
    <% if user_signed_in? %>
      <div class="btn">
        <%= link_to "Go to the map!", message_users_path %>
      </div>
    <% else %>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Log in" %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="container">
  <div class="howitworks-area d-flex flex-column">
    <%= image_tag "Description-FR-1.png", class: "img-home" %>
    <%= image_tag "Description-FR-2.png", class: "img-home" %>
    <%= image_tag "Description-FR-3.png", class: "img-home" %>
  </div>
</div>

<div class ="footer d-flex flex-column align-items-center justify-content-center py-2 px-3 border-top">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    This footer is made with ❤️ at Le Wagon
  </div>
</div>



<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary-modal" data-bs-dismiss="modal">Supprimer</button>
        <button type="button" class="btn btn-primary-modal">Itinéraire</button>
      </div>
    </div>
  </div>
</div>
