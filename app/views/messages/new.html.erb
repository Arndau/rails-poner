<%= content_for(:topnavbar_title) do %>
Create your Pon 1/2
<% end %>
<%= content_for(:bottom_navbar_title) do %>
<%= link_to message_users_path, class: "navbar-brand" do %>
    <i class="fas fa-long-arrow-alt-left"></i>
  <% end %>
<% end %>

<div style="width: 100vw; height: 30vh;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class='container'>
  <h4>CREATE YOUR PON</h4>

  <%= simple_form_for [ @message ] do |f| %>
    <%# <%= f.input :address, label: false, placeholder:'Location' %>
    <%= f.input :address,
            label: false,
            placeholder:'Location',
            input_html: { data: { geocoder_target: "address" }, class: "d-none"},
            wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] }, placeholder:'📍 Location'} %>
    <%= f.input :hint, label: false, placeholder:' 💡 Your hint' %>
    <%= f.input :content, as: :rich_text_area, label: false, placeholder:'✏️ Content' %>
    <%= f.input :photo, label: '📷 Media', as: :file %>
    <div class='text-center'>
      <%= f.submit "SELECT PONFRIENDS", class: "btn text-center" %>
    </div>
  <% end %>
</div>
