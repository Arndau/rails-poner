<div class='container'>
<h2>CREATE YOUR PONMESSAGE</h2>

<%= simple_form_for [ @message ] do |f| %>
  <%# <%= f.input :address, label: false, placeholder:'Location' %>
  <%= f.input :address,
          label: false,
          placeholder:'Location',
          input_html: { data: { geocoder_target: "address" }, class: "d-none"},
          wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] }, placeholder:'📍 Location'} %>
  <%= f.input :hint, label: false, placeholder:' 💡 Your hint' %>
  <%= f.input :content, as: :rich_text_area, label: false, placeholder:'Content' %>
  <%= f.input :photo, label: '📷 Media', as: :file %>

  <%= f.submit "SELECT PONFRIENDS", class: "btn btn-primary" %>
<% end %>
</div>
